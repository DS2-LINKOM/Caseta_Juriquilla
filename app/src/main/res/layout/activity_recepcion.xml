<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">


    <!---ENCABEZADO-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/feb"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="28dp"
                        android:src="@drawable/menu"
                        android:onClick="showPopup"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="Paquetería Recep."
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:fontFamily="@font/fontNegritaC"
                        />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Calle:"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />
                    <LinearLayout
                        android:id="@+id/setCalle1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:background="@drawable/rect_gray_border"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >


                        <Spinner
                            android:id="@+id/setCalle"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight="30"
                            android:background="@drawable/custom_spinner"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/fontColorNegro"
                            android:textSize="@dimen/fontSize"
                            android:fontFamily="@font/fontNormalC"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>
                <LinearLayout
                    android:id="@+id/numero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Número:"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <LinearLayout
                        android:id="@+id/setNumero1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:background="@drawable/rect_gray_border"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >


                        <Spinner
                            android:id="@+id/setNumero"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight="30"
                            android:background="@drawable/custom_spinner"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/fontColorNegro"
                            android:textSize="@dimen/fontSize"
                            android:fontFamily="@font/fontNormalC"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>
                <LinearLayout
                    android:id="@+id/lote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Lote:"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <LinearLayout
                        android:id="@+id/setLote1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:background="@drawable/rect_gray_border"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >


                        <Spinner
                            android:id="@+id/setLote"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight="30"
                            android:background="@drawable/custom_spinner"
                            android:spinnerMode="dropdown"
                            android:visibility="visible"
                            android:textColor="@color/fontColorNegro"
                            android:textSize="@dimen/fontSize"
                            android:fontFamily="@font/fontNormalC"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Comentarios:"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />
                    <customfonts.MyEditText
                        android:id="@+id/setComent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="75dp"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Foto:"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <Button
                        android:id="@+id/foto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/boton_descargar"
                        android:gravity="center"
                        android:text="TOMAR FOTO"
                        android:textColor="@color/FormTextColor"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>

                <LinearLayout
                    android:id="@+id/View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="gone">



                    <ImageView
                        android:id="@+id/viewFoto"
                        android:layout_width="match_parent"
                        android:layout_height="161dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/espacio"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="gone">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/BtnReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"
                        android:textColor="@color/fontColorGris"
                        android:layout_gravity="center"
                        />

                    <Button
                        android:id="@+id/btnRegistrar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/boton_descargar"
                        android:gravity="center"
                        android:text="REGISTRAR"
                        android:textColor="@color/FormTextColor"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/espacio2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="gone"></LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>



