                    <customfonts.MyTextView
                        android:id="@+id/setPlacas"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Comentarios de Salia Tardía:"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />
                    <customfonts.MyEditText
                        android:id="@+id/setComentarios"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:maxLength="149"
                        android:textColor="@color/fontColorNegro"
                        android:textSize="@dimen/fontSize"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    ></LinearLayout>

                <LinearLayout
                    android:id="@+id/Foto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/nombre_foto1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="foto1"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"
                        android:textColor="@color/fontColorGris"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/espacio2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="visible"></LinearLayout>

                <LinearLayout
                    android:id="@+id/Foto1View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="161dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/espacio3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="visible">
                </LinearLayout>




                <LinearLayout
                    android:id="@+id/Foto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/nombre_foto2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="foto2"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/espacio5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="visible"
                    ></LinearLayout>

                <LinearLayout
                    android:id="@+id/Foto2View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="161dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/espacio6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Foto3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/nombre_foto3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="foto3"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColorGris"
                        android:textSize="@dimen/fontSize"
                        android:fontFamily="@font/fontNegritaC"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fontSize"
                        android:textColor="@color/fontColorGris"
                        android:layout_gravity="center"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/espacio8"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Foto3View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="161dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/espacio9"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:orientation="vertical"
                    android:visibility="visible"
                    ></LinearLayout>
                <LinearLayout
                    android:id="@+id/registrar4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
